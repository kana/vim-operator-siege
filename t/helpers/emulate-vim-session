#!/bin/bash

vim -u NONE -i NONE -N \
  -c "set packpath^=$PWD/t" \
  -c 'packloadall!' \
  -c 'source t/helpers/bootstrap.vim' \
  -c "source! $1" \
  -c 'write t/,test.out' \
  -c 'qall!' \
  >/dev/null 2>&1

diff="$(diff --unified "$2" t/,test.out)"
if [ $? = 0 ]
then
  echo 'ok 1'
else
  echo 'not ok 1'
  echo "$diff" | sed 's/^/# /'
fi
echo '1..1'
